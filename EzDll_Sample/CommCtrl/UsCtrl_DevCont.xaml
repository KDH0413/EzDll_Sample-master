<UserControl x:Class="MFC.UI.UsCtrl_DevCont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MFC.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="70">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="25" Width="70">
            <materialDesign:PackIcon x:Name="Icon_Dev" Kind="CastOff" Height="18" Width="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="LightGray" VerticalAlignment="Center"/>
            <TextBlock x:Name="txt_Dev" Text="-----" TextAlignment="Center" Foreground="LightGray" Width="52" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
